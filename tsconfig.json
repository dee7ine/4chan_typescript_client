{
	"compilerOptions": {
        "baseUrl": "src",
		"outDir": "dist/",
		"module": "ES2022",
		"moduleResolution": "Node",
		"target": "ES2022",
		"lib": [ "ESNext", "DOM" ],
		
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
        "paths": {
            //"*":["./*"],
            "@/*": ["*"],
          },
		
		"noEmit": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
	},
	"exclude": [
		".git/",
		".github/",
		".vscode/",
		"dist/"
	],
	"include": [ "src/**/*", "test/threads.test.ts" ]
}  
